<%- include('../../partials/header.ejs') %>

<div class="profile-page">
  <!-- Cover Photo Section -->
  <div class="position-relative">
    <% if (user.coverPicture) { %>
    <img
      class="cover-image w-100"
      src="/uploads/<%= user.coverPicture %>"
      alt="Cover Picture"
      style="height: 300px; object-fit: cover"
    />
    <% } else { %>
    <img
      class="cover-image w-100"
      src="/images/Profile/cover.jpg"
      alt="Default Cover"
      style="height: 300px; object-fit: cover"
    />
    <% } %>

    <!-- Profile Picture Overlay -->
    <div class="position-absolute" style="bottom: -60px; left: 30px">
      <% if (user.profilePicture) { %>
      <img
        class="profile-image rounded-circle border border-4 border-dark"
        src="/uploads/<%= user.profilePicture %>"
        alt="Profile Picture"
        style="width: 120px; height: 120px; object-fit: cover"
      />
      <% } else { %>
      <img
        class="profile-image rounded-circle border border-4 border-dark"
        src="/images/Profile/pfp.svg"
        alt="Default Profile"
        style="width: 120px; height: 120px; object-fit: cover"
      />
      <% } %>
    </div>

    <!-- Edit Button -->
    <div class="position-absolute" style="top: 20px; right: 20px">
      <a
        class="btn btn-outline-secondary card-hover px-4"
        href="/profile/edit"
        style="background-color: rgba(0, 0, 0, 0.6); border-color: #e45260"
      >
        <i class="bi bi-pencil-square me-2"></i>Edit Profile
      </a>
    </div>
  </div>

  <!-- Profile Info Section -->
  <div class="container-fluid px-4 mt-5 pt-3">
    <div class="row">
      <!-- Left Column - User Info -->
      <div class="col-md-4">
        <div class="mb-4">
          <h2 class="text-light fw-bold mb-4"><%= user.username %></h2>

          <!-- Quick Links -->
          <div class="d-grid gap-2">
            <a href="/watchlist" class="btn btn-outline-light card-hover">
              <img
                src="/images/Icons/watchListIcon.svg"
                alt="watchlist"
                width="20"
                height="20"
                class="me-2"
              />
              My Watchlist
            </a>
            <a href="/favouritelist" class="btn btn-outline-light card-hover">
              <i class="bi bi-heart-fill me-2" style="color: #e45260"></i>
              My Favorites
            </a>
            <a href="/auth/sign-out" class="btn btn-outline-danger card-hover">
              <i class="bi bi-box-arrow-right me-2"></i>
              Sign Out
            </a>
          </div>
        </div>
      </div>

      <!-- Right Column - Lists and Info -->
      <div class="col-md-8">
        <div class="row">
          <!-- Custom Lists Section -->
          <div class="col-12 mb-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h4 class="text-light fw-semibold mb-0">
                <i class="bi bi-collection me-2" style="color: #e45260"></i>
                My Custom Lists
              </h4>
              <button
                class="btn btn-sm btn-outline-light card-hover"
                data-bs-toggle="modal"
                data-bs-target="#createListModal"
              >
                <i class="bi bi-plus-circle me-1"></i>Create List
              </button>
            </div>

            <% if (user.customLists && user.customLists.length > 0) { %>
            <div class="row g-3">
              <% user.customLists.forEach(list => { %>
              <div class="col-md-6 col-lg-4">
                <div class="card bg-dark border-secondary card-hover h-100">
                  <div class="card-body">
                    <div class="mb-2">
                      <h6 class="text-light mb-0"><%= list.title %></h6>
                    </div>
                    <p class="text-muted small mb-2">
                      <%= (list.movie.length + list.tv.length) %> items
                    </p>
                    <div class="d-flex gap-1 mb-3">
                      <% if (list.movie.length > 0) { %>
                      <span class="badge bg-secondary">
                        <%= list.movie.length %> Movies
                      </span>
                      <% } %> <% if (list.tv.length > 0) { %>
                      <span class="badge bg-secondary">
                        <%= list.tv.length %> TV Shows
                      </span>
                      <% } %>
                    </div>
                    <a
                      href="/list/<%= list._id %>"
                      class="btn btn-sm btn-outline-light w-100"
                    >
                      View List
                    </a>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
            <% } else { %>
            <div class="card bg-dark border-secondary">
              <div class="card-body text-center py-5">
                <i
                  class="bi bi-collection text-muted mb-3"
                  style="font-size: 3rem"
                ></i>
                <h5 class="text-light mb-2">No Custom Lists Yet</h5>
                <p class="text-muted mb-3">
                  Create your first custom list to organize your favorite movies
                  and TV shows!
                </p>
                <button
                  class="btn btn-outline-light card-hover"
                  data-bs-toggle="modal"
                  data-bs-target="#createListModal"
                >
                  <i class="bi bi-plus-circle me-2"></i>Create Your First List
                </button>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Create List Modal -->
<div class="modal fade" id="createListModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h5 class="modal-title text-light">Create New List</h5>
        <button
          type="button"
          class="btn-close btn-close-white card-hover"
          data-bs-dismiss="modal"
        ></button>
      </div>
      <form action="/list" method="POST">
        <div class="modal-body">
          <input
            type="text"
            class="form-control bg-dark text-light"
            name="listName"
            placeholder="List name..."
            required
          />
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn card-hover" style="background-color: #e45260;">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>
